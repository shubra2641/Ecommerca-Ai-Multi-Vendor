<?xml version="1.0" encoding="UTF-8"?>
<ruleset name="Custom PHPMD Rules for Complexity">
    <description>Custom rules for checking code complexity similar to Codacy</description>

    <!-- Rule for Cyclomatic Complexity -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="CyclomaticComplexity"/>
        <rule ref="rulesets/codesize.xml"/>
    </rule>

    <!-- Rule for NPath Complexity -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="NPathComplexity"/>
    </rule>

    <!-- Rule for the number of methods in a class -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="TooManyMethods"/>
    </rule>

    <!-- Rule for the number of lines in a method -->
    <rule ref="rulesets/codesize.xml">
        <exclude name="TooManyLines"/>
    </rule>

    <!-- General complexity rules -->
    <rule ref="rulesets/cleancode.xml"/>
    <rule ref="rulesets/design.xml"/>

    <!-- Optional rules -->
    <rule ref="rulesets/naming.xml"/>

</ruleset>
