<?xml version="1.0"?>
<ruleset name="Project">
  <description>PHP_CodeSniffer ruleset for PSR-12 compliance</description>
  <rule ref="PSR12" />
  <!-- Suppress the line-length sniff since this codebase intentionally contains long lines
       across many files (third-party gateways, view builders, etc.). We'll keep PSR-12
       otherwise and address substantive issues separately. -->
  <rule ref="Generic.Files.LineLength">
    <severity>0</severity>
  </rule>
  <file>app</file>
  <file>routes</file>
  <file>config</file>
  <file>database</file>
  <file>resources/lang</file>
  <exclude-pattern>*/storage/*</exclude-pattern>
  <exclude-pattern>*/vendor/*</exclude-pattern>
  <exclude-pattern>*/database/migrations/*</exclude-pattern>
</ruleset>
